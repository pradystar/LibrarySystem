    body(style='background: url(/images/lib1.jpg) no-repeat center center fixed; -webkit-background-size: cover;-moz-background-size: cover;-o-background-size: cover;background-size: cover;')
        div(class='container' style=' padding-top:65px; background-color: rgba(255, 255, 255, 0.9); overflow-y: auto; overflow-x: hidden;height: 100%')
            div(class='container')
                -if(msg!== undefined)
                    p= msg
                form(class='form-inline' method='GET', action="/check_in")
                    div(class='form-group')
                        label(for='s_box') Enter search string
                        | &nbsp;&nbsp;
                        input(type='text' class='form-control' id='s_box' name='search_string' placeholder='Enter value...' size='50')
                        | &nbsp;&nbsp;
                        label(for='_type') Search by &nbsp;&nbsp;
                        select(class='form-control' id='_type' name='s_type' style='widht:150px')
                            option(value='_cid') CardID
                            option(value='_isbn') ISBN
                            option(value='_nm') Name
                        |&nbsp;&nbsp;
                        input(class='form-control' type='submit' value='Search')
            -if(sr!== undefined)
                if(sr.length!=0)
                    div(class='container')
                        form(method='GET', action="/check_in")
                            div(class='form-group')
                                table.table(class= 'table-hover' style='width: 75%')
                                    tbody
                                        each r in sr
                                            tr
                                                td: label #{r.NAME}
                                                td: label #{r.CID}
                                                td: label #{r.ISBN}
                                                td(style='text-align: center'): input(type='radio',name='rad', value=r.ISBN)    
                                input(class='form-control' type='submit' value='Check IN' style='width: 100px')
                else
                    p No results found!!!